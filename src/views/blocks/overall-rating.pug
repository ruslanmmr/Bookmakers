mixin row(title, value)
  tr.overall-rating__row
    td.overall-rating__col
      a.scroll-link.inline-link.inline-link_style3.solid.overall-rating__title&attributes(attributes)=title
    td.overall-rating__col
      ul.overall-rating__list
        li.overall-rating__item.overall-rating__item_active
        li.overall-rating__item.overall-rating__item_active
        li.overall-rating__item.overall-rating__item_active
        li.overall-rating__item.overall-rating__item_active
        li.overall-rating__item.overall-rating__item_active
        li.overall-rating__item.overall-rating__item_active
        li.overall-rating__item.overall-rating__item_active
        li.overall-rating__item.overall-rating__item_active
        li.overall-rating__item
        li.overall-rating__item
    td.overall-rating__col
      .overall-rating__value=value
